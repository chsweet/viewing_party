 @import "bootstrap";
.container {
  position: relative;
  min-height: 100VH;
  padding-bottom: 80px;
}
body {
  display: block;
  min-height: auto;
}

form {
  margin: 5%;
}

input {
  margin: 10px;
  width: 50%;
}

label {
  margin: 10px;
  width: 25%;
}

.invited {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.invited label {
  width: auto;
}

.invited input {
  width: auto;
}

.button {
  background-color: #7A6C6C;
  color: white;
  border-radius: 5px;
  border-style: none;
  padding: 5px;
}

.button:hover {
  background-color: #EEEEEE;
  color: #6E6060;
  border-radius: 5px;
  padding: 5px;
  border: none;
}

a {
  color: #6E6060;
  text-decoration: none;
}

a:hover {
  color: #6E6060;
  font-weight: bold;
}

main {
}

footer {
  display: flex;
  align-self: baseline;
  flex-direction: row;
  position: absolute;
  height: 80px;
  bottom: 0;
}

h1 {
  text-align: center;
  margin: 25px auto;
  color: #222222;
}

h2, h3, h4 {
  text-align: center;
  margin: 15px auto;
  color: #555555;
}
ul {
  list-style-type: none;
  padding-left: 0;
}

#hamburger {
  height: 50px;
  width: 50px;
  background-image: url(<%= asset_path 'icons8-menu-50.png' %>);
  background-repeat: no-repeat;
  position: absolute;
  top: 5px;
  right: 5px;
  float: right;
}

#hamburger.active {
  height: 50px;
  width: 50px;
  background-image: url(<%= asset_path 'icons8-circled-x-50.png' %>);
  background-repeat: no-repeat;
  position: absolute;
  top: 5px;
  right: 5px;
}

.title {
  margin: 8% auto;
  padding: 10px;
  color: white;
  background-color: #7A6C6C;
  width: 100%;
}

.menu {
  position: absolute;
  right: 0;
  top: 50px;
  list-style-type: none;
  visibility: hidden;
  padding: 20px;
  margin: 10px;
  background-color: #EEEEEE;
  z-index: 2;
  border-radius: 5px;
}

.alert {
  position: absolute;
  background-color: #7A6C6C;
  color: white;
  border-radius: 5px;
  border-style: none;
  padding: 5px;
}

.menu.active {
  position: absolute;
  right: 0;
  top: 50px;
  list-style-type: none;
  visibility: visible;
  padding: 20px;
  margin: 10px;
  background-color: #EEEEEE;
  z-index: 2;
  border-radius: 5px;
}

.menu.active li {
  margin: 5px;
  padding: 5px;
}
