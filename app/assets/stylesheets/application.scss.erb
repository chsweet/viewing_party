 @import "bootstrap";
.container {
  position: relative;
  min-height: 100VH;
  padding-bottom: 80px;
}
body {
  display: block;
  min-height: auto;
}

main {
}

footer {
  display: flex;
  align-self: baseline;
  flex-direction: row;
  position: absolute;
  height: 80px;
  bottom: 0;
}

h1 {
  text-align: center;
  margin: 20px auto;
}

#hamburger {
  height: 50px;
  width: 50px;
  background-image: url(<%= asset_path 'icons8-menu-50.png' %>);
  background-repeat: no-repeat;
  position: absolute;
  top: 5px;
  right: 5px;
}

#hamburger.active {
  height: 50px;
  width: 50px;
  background-image: url(<%= asset_path 'icons8-circled-x-50.png' %>);
  background-repeat: no-repeat;
  position: absolute;
  top: 5px;
  right: 5px;
}

.menu {
  visibility: hidden;
}

.menu.active {
  visibility: visible;
}
